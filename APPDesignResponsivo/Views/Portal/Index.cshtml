
@{
    ViewData["Title"] = "Acolhimento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('/img/home-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>Docs 4 ALL</h1>
                        <hr class="small">
                        <span class="subheading">Um portal de Gestão Documental para Si (ou Ré)</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            @{
                var listaProdutos = @Model;
                foreach (var produto in listaProdutos)
                {

                        <div class="post-preview">
                            <a href="/Produto/Consultar/@produto.Id">
                                <h2 class="post-title">
                                    @produto.Designacao

                                </h2>
                                <h3 class="post-subtitle">
                                    PUnitário: @produto.PUnitario <i>Stock : @produto.StkAtual</i>
                                </h3>
                            </a>
                            <p class="post-meta">Tretas a colocar posteriormente </p>
                        </div>
                        <hr>
                }
                }
               
                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <a href="#">Publicações mais Antigas &rarr;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <hr>

